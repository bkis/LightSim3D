<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <screen id="start" controller="de.bkiss.lightsim3d.GUIController">
        
        <layer id="layer" backgroundColor="#0000" childLayout="vertical">
            <panel height="100%" width="200px" backgroundColor="#222f" childLayout="vertical" visibleToMouse="true">
                
                <!-- CONTROLS -->
                <text text="Kategorie:" font="Interface/Fonts/Default.fnt" height="22" wrap="false" align="left"/>

                <panel width="100%" backgroundColor="#fff1" childLayout="horizontal">
                    <text text="R" font="Interface/Fonts/Default.fnt" height="22" wrap="false"/>
                    <control id="slider1" name="horizontalSlider" width="100px" align="right"/>
                </panel>

                <panel width="100%" backgroundColor="#fff1" childLayout="horizontal">
                    <text text="G" font="Interface/Fonts/Default.fnt" height="22" wrap="false" align="left"/>
                    <control id="slider2" name="horizontalSlider" width="100px" align="right"/>
                </panel>

                <panel width="100%" backgroundColor="#fff1" childLayout="horizontal">
                    <text text="B" font="Interface/Fonts/Default.fnt" height="22" wrap="false" align="left"/>
                    <control id="slider3" name="horizontalSlider" width="100px" align="right"/>
                </panel>
                
            </panel>
        </layer>
        
    </screen> 
    
</nifty>
