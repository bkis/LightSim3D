<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useControls filename="nifty-default-controls.xml" />
    
    <screen id="start" controller="de.bkiss.lightsim3d.GUIController">
        
        <layer id="layer" backgroundColor="#0000" childLayout="vertical">
            <panel width="100%"
                   backgroundColor="#0000"
                   childLayout="center" 
                   visibleToMouse="false"></panel>
            <panel height="200" width="100%"
                   backgroundColor="#eeef"
                   childLayout="center"
                   visibleToMouse="true">
                
                <!-- CONTROLS -->
                
                <control name="label" font="Interface/Fonts/Default.fnt" text="HAHAHA" align="center" height="20"/>
                <control id="sliderV" name="verticalSlider" height="100px" />
                <control id="game_stat_time" name="label" font="Interface/Fonts/Default.fnt" text="STAT" align="left" height="18"/>
		<control id="game_stat_district_tot_luxury" name="label" font="Interface/Fonts/Default.fnt" text="STAT" align="left" height="18"/>
		<control id="game_stat_gentrified" name="label" font="Interface/Fonts/Default.fnt" text="STAT" align="left" height="18"/>
                
            </panel>
        </layer>
        
    </screen> 
    
</nifty>
