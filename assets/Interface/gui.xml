<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <screen id="start" controller="de.bkiss.lightsim3d.GUIController">
        
        <layer id="layer" backgroundColor="#0000" childLayout="vertical">
            <panel height="100%" width="200px" backgroundColor="#222f" childLayout="vertical" visibleToMouse="true">
                
                <panel width="100%" childLayout="vertical">
                    <!-- MATERIAL -->
                    <panel width="100%" height="5px"></panel>
                    <text text="Material" color="#333f" backgroundColor="#ffff" width="100%" font="Interface/Fonts/CalibriBold.fnt" height="22" wrap="false" align="center"/>
                    <panel width="100%" height="5px"></panel>

                    <!-- MATERIAL DIFFUSE -->
                    <text text="  Diffuse RGB" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slMatDiffR" name="horizontalSlider" width="90%"/>
                    <control id="slMatDiffG" name="horizontalSlider" width="90%"/>
                    <control id="slMatDiffB" name="horizontalSlider" width="90%"/>
                    <!-- /MATERIAL DIFFUSE -->
                    
                    <!-- MATERIAL AMBIENT -->
                    <text text="  Ambient RGB" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slMatAmbR" name="horizontalSlider" width="90%"/>
                    <control id="slMatAmbG" name="horizontalSlider" width="90%"/>
                    <control id="slMatAmbB" name="horizontalSlider" width="90%"/>
                    <!-- /MATERIAL AMBIENT -->
                    
                    <!-- MATERIAL SPECULAR -->
                    <text text="  Specular RGB" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slMatSpecR" name="horizontalSlider" width="90%"/>
                    <control id="slMatSpecG" name="horizontalSlider" width="90%"/>
                    <control id="alMatSpecB" name="horizontalSlider" width="90%"/>
                    <!-- /MATERIAL SPECULAR -->
                    
                    <!-- MATERIAL SHININESS -->
                    <text text="  Shininess" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slMatShin" name="horizontalSlider" width="90%"/>
                    <!-- /MATERIAL SHININESS -->
                    
                    <panel width="100%" height="20px" backgroundColor="#0000"></panel>
                </panel>
                
                <panel width="100%" childLayout="vertical">
                    <!-- AMBIENT LIGHT -->
                    
                    <!-- AMBIENT LIGHT COLOR-->
                    <panel width="100%" height="5px"></panel>
                    <text text="Ambient Light RGB" color="#333f" backgroundColor="#ffff" width="100%" font="Interface/Fonts/CalibriBold.fnt" height="22" wrap="false" align="center"/>
                    <panel width="100%" height="5px"></panel>

                    <control id="slAmbLiR" name="horizontalSlider" width="90%"/>
                    <control id="slAmbLiG" name="horizontalSlider" width="90%"/>
                    <control id="slAmbLiB" name="horizontalSlider" width="90%"/>
                    <!-- /AMBIENT LIGHT COLOR -->
                    
                    <panel width="100%" height="20px" backgroundColor="#0000"></panel>
                </panel>
                
                <panel width="100%" childLayout="vertical">
                    <!-- SPOTLIGHT -->
                    <panel width="100%" height="5px"></panel>
                    <text text="Spotlight" color="#333f" backgroundColor="#ffff" width="100%" font="Interface/Fonts/CalibriBold.fnt" height="22" wrap="false" align="center"/>
                    <panel width="100%" height="5px"></panel>

                    <!-- SPOTLIGHT COLOR -->
                    <text text="  Color RGB" font="Interface/Fonts/Calibri.fnt" height="22" wrap="false" align="center"/>
                    <control id="slSpotLiR" name="horizontalSlider" width="90%"/>
                    <control id="slSpotLiG" name="horizontalSlider" width="90%"/>
                    <control id="slSpotLiB" name="horizontalSlider" width="90%"/>
                    <!-- /SPOTLIGHT COLOR -->

                    <!-- SPOTLIGHT EXPONENT -->
                    <text text="  Exponent" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slSpotExp" name="horizontalSlider" width="90%"/>
                    <!-- /SPOTLIGHT EXPONENT -->

                    <!-- SPOTLIGHT CUTOFF -->
                    <text text="  Cutoff" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slSpotCut" name="horizontalSlider" width="90%"/>
                    <!-- /SPOTLIGHT CUTOFF -->
                </panel>
                
            </panel>
            
        </layer>
        
    </screen> 
    
</nifty>
