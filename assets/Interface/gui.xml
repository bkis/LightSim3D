<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">
    
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
    
    <screen id="start" controller="de.bkiss.lightsim3d.GUIController">
        
        <layer id="layer" backgroundColor="#0000" childLayout="vertical">
            <panel height="100%" width="200px" backgroundColor="#222f" childLayout="vertical" visibleToMouse="true">
                
                <panel width="100%" childLayout="vertical">
                    <!-- MATERIAL -->
                    <text text="Material" color="#ffff" backgroundColor="#fff3" width="100%" font="Interface/Fonts/CalibriBold.fnt" height="22" wrap="false" align="center"/>
                    <panel width="100%" height="5px"></panel>

                    <!-- MATERIAL DIFFUSE -->
                    <text text="  Diffuse RGBA" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <panel backgroundColor="#600f" childLayout="center" width="100%"><control id="slMatDiffR" name="horizontalSlider" min="0.0" max="1.0" initial="0.5" stepSize="0.01" width="90%"/></panel>
                    <panel backgroundColor="#060f" childLayout="center" width="100%"><control id="slMatDiffG" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#006f" childLayout="center" width="100%"><control id="slMatDiffB" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#333f" childLayout="center" width="100%"><control id="slMatDiffA" name="horizontalSlider" width="90%"/></panel>
                    <!-- /MATERIAL DIFFUSE -->
                    
                    <!-- MATERIAL AMBIENT -->
                    <text text="  Ambient RGBA" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <panel backgroundColor="#600f" childLayout="center" width="100%"><control id="slMatAmbR" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#060f" childLayout="center" width="100%"><control id="slMatAmbG" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#006f" childLayout="center" width="100%"><control id="slMatAmbB" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#333f" childLayout="center" width="100%"><control id="slMatAmbA" name="horizontalSlider" width="90%"/></panel>
                    <!-- /MATERIAL AMBIENT -->
                    
                    <!-- MATERIAL SPECULAR -->
                    <text text="  Specular RGB" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <panel backgroundColor="#600f" childLayout="center" width="100%"><control id="slMatSpecR" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#060f" childLayout="center" width="100%"><control id="slMatSpecG" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#006f" childLayout="center" width="100%"><control id="alMatSpecB" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#333f" childLayout="center" width="100%"><control id="alMatSpecA" name="horizontalSlider" width="90%"/></panel>
                    <!-- /MATERIAL SPECULAR -->
                    
                    <!-- MATERIAL SHININESS -->
                    <text text="  Shininess" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                    <control id="slMatShin" name="horizontalSlider" width="90%"/>
                    <!-- /MATERIAL SHININESS -->
                    
                    <panel width="100%" height="10px" backgroundColor="#0000"></panel>
                </panel>
                
                <panel width="100%" childLayout="vertical">
                    <!-- AMBIENT LIGHT -->
                    
                    <!-- AMBIENT LIGHT COLOR-->
                    <panel width="100%" height="5px"></panel>
                    <text text="Ambient Light RGB" color="#ffff" backgroundColor="#fff3" width="100%" font="Interface/Fonts/CalibriBold.fnt" height="22" wrap="false" align="center"/>
                    <panel width="100%" height="5px"></panel>

                    <panel backgroundColor="#600f" childLayout="center" width="100%"><control id="slAmbLiR" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#060f" childLayout="center" width="100%"><control id="slAmbLiG" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#006f" childLayout="center" width="100%"><control id="slAmbLiB" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#333f" childLayout="center" width="100%"><control id="slAmbLiA" name="horizontalSlider" width="90%"/></panel>
                    <!-- /AMBIENT LIGHT COLOR -->
                    
                    <panel width="100%" height="10px" backgroundColor="#0000"></panel>
                </panel>
                
                <panel width="100%" childLayout="vertical">
                    <!-- SPOTLIGHT -->
                    <text text="Spotlight" color="#ffff" backgroundColor="#fff3" width="100%" font="Interface/Fonts/CalibriBold.fnt" height="22" wrap="false" align="center"/>
                    <panel width="100%" height="5px"></panel>

                    <!-- SPOTLIGHT COLOR -->
                    <text text="  RGB" font="Interface/Fonts/Calibri.fnt" height="22" wrap="false" align="center"/>
                    <panel backgroundColor="#600f" childLayout="center" width="100%"><control id="slSpotLiR" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#060f" childLayout="center" width="100%"><control id="slSpotLiG" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#006f" childLayout="center" width="100%"><control id="slSpotLiB" name="horizontalSlider" width="90%"/></panel>
                    <panel backgroundColor="#333f" childLayout="center" width="100%"><control id="slSpotLiA" name="horizontalSlider" width="90%"/></panel>
                    <!-- /SPOTLIGHT COLOR -->

                    <panel childLayout="horizontal">
                        <panel childLayout="vertical">
                            <!-- SPOTLIGHT EXPONENT -->
                            <text text="  Exponent" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                            <control id="slSpotExp" name="horizontalSlider" width="90%"/>
                            <!-- /SPOTLIGHT EXPONENT -->
                        </panel>
                        <panel childLayout="vertical">
                            <!-- SPOTLIGHT CUTOFF -->
                            <text text="  Cutoff" font="Interface/Fonts/Calibri.fnt" width="90%" height="22" wrap="false" align="center"/>
                            <control id="slSpotCut" name="horizontalSlider" width="90%"/>
                            <!-- /SPOTLIGHT CUTOFF -->
                        </panel>
                    </panel>
                </panel>
                
            </panel>
            
        </layer>
        
    </screen> 
    
</nifty>
